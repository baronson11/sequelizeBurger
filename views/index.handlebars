<img src="static/img/burger.png" alt="burger" title="Eat-Da-Burger">

<h1>Eat-Da-Burger!</h1>
<h5>The app that encourages unhealthy eating habits...</h4>

<div class="wrapper">
  <div class="notDevoured">
    <h3>Burgers that are not devoured!</h2>

    <ul>
      {{#each burger}}
        {{#unless devoured}}
        <li class="list">
          <p>{{this.burger_name}}
            <button class="devour" data-id="{{this.id}}" data-devoured="{{this.devoured}}">Devour</button>
          </p>
        </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devoured">
    <h3>Burgers that are devoured!</h2>

    <ul>
      {{#each burger}}
        {{#if devoured}}
        <li class="list">
          <p>{{this.burger_name}}</p>
        </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h3>Order a Burger</h2>
<form class="form" >

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <div class="form-group">
    <input type="radio" name="newburger" value="true" checked> Devoured!<br>
    <input type="radio" name="newburger" value="false"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
